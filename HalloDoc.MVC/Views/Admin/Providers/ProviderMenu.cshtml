@model ProviderMenuViewModel
@{
    Layout = "_AdminDashboardLayout";
    ViewData["UserName"] = Model.UserName;
}

<div class="container mt-5">
    <div class="justify-content-between d-flex container-fluid mb-2 position-relative ">
        <div class="">
            <h3> Provider Information</h3>
        </div>
        <div>
            <button onclick="history.back(-1)" class="btn btn-outline-info"> ❮  Back </button>
        </div>
    </div>
    <div class="dashboard-card shadow p-4 mb-5 rounded">
        <div class="row justify-content-between">

            <div class="col-12 col-lg-4 d-flex normal-input rounded align-items-center ps-2">

                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 50 50">
                    <path d="M 21 3 C 11.654545 3 4 10.654545 4 20 C 4 29.345455 11.654545 37 21 37 C 24.701287 37 28.127393 35.786719 30.927734 33.755859 L 44.085938 46.914062 L 46.914062 44.085938 L 33.875 31.046875 C 36.43682 28.068316 38 24.210207 38 20 C 38 10.654545 30.345455 3 21 3 z M 21 5 C 29.254545 5 36 11.745455 36 20 C 36 28.254545 29.254545 35 21 35 C 12.745455 35 6 28.254545 6 20 C 6 11.745455 12.745455 5 21 5 z">
                    </path>
                </svg>

                <select id="filter-regions" class="form-select border-0 shadow-none" aria-label="Default select example">
                    <option selected value="0">All Regions</option>
                    @foreach (Region region in Model.regions)
                    {
                        <option value="@region.Regionid">@region.Name</option>
                    }
                </select>

            </div>


            <div class="d-flex col-3 mr-0">
                <a asp-controller="Admin" asp-action="CreatePhysicianAccount" class="btn btn-outline-info mx-2" style="width:fit-content">
                    <span>Create Provider Account</span>
                </a>
            </div>

        </div>

        <div id="provider-menu-partial-table"></div>

    </div>

</div>

<div id="modal-div"></div>

<script>

    var region_filter = 0;

    $('#filter-regions').change(function () {
        region_filter = $(this).val();
        loadPartialTable(1);
    });

    function loadPartialTable(pageNo) {
        $.ajax({
            url: "/Admin/ProviderMenuPartialTable",
            type: 'POST',
            data: {
                pageNo: pageNo,
                regionFilter: region_filter,
            },
            success: function (result) {
                $('#provider-menu-partial-table').html(result);
            },
            complete: function () {

            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        });
    }

    loadPartialTable(1);

</script>

<script>

    $('.admin-tab').removeClass("active");
    $('#provider-tab').addClass("active");

</script>