@model CreateAccessViewModel
@{
    Layout = "_AdminDashboardLayout";
}

<div class="container mt-4">

    <div class="p-4 mb-5 rounded">
        <div class="d-flex justify-content-between mt-5">
            <h4>Create Access</h4>

            <button onclick="history.back(-1)" class="btn btn-outline-info shadow-none night-mode-btn d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 -960 960 960">
                    <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                </svg>
                <span>Back</span>
            </button>

        </div>

        <div class="shadow container mt-4 p-2">
            <div class="row   border-2">
                <h4 class="mt-4 col-12">Details </h4>

                <form method="post">

                    <div class="row mt-4">
                        <div class="col-md-6 mt-4 ">

                            <div class="form-floating">
                                <input asp-for="RoleName" type="text" class="changeable form-control" placeholder="Role Name" id="roleName">
                                <label for="floatingInput">Role Name</label>
                            </div>

                        </div>
                        <div class="col-md-6 col-12 mt-4">
                            <div class="form-floating">

                                <select asp-for="AccountType" class="form-select" id="accountType">
                                    <option disabled selected value=""> -- Select Account Type -- </option>

                                    @if (Model.netRoles != null && Model.netRoles.Any())
                                    {
                                        foreach (var netRole in Model.netRoles)
                                        {
                                            <option value="@netRole.Id">@netRole.Name</option>
                                        }
                                    }

                                </select>
                                <label>Account Type</label>
                            </div>

                        </div>

                        <div class="col-12 mx-4 d-flex justify-content-start flex-wrap mt-4" id="checkboxContainer">
                        </div>


                    </div>

                    <div class="row">

                        <div class="d-flex justify-content-end">

                            <button type="submit" class="btn my-4 py-2 px-4" style="background-color: #10bce9; color: white;">
                                Save
                            </button>

                        </div>

                    </div>

                </form>

            </div>

        </div>
    </div>
</div>

<style>

    input[type="checkbox"]:checked {
        background-color: #10BCE9 !important;
    }

</style>

<script>
    $("#accountType").change(function () {
        var type1 = $('option:selected', this).val();

        $.ajax({
            url: "/Guest/GetMenusByAccounttype",
            data: { type: type1 },
            method: 'GET',
            success: function (response) {
                $('#checkboxContainer').empty();
                $.each(response, function (index, item) {
                    $('#checkboxContainer').append('<input type="checkbox" name="selectedMenus" class="border changeable check form-check-input mx-3" value="' + item.menuid + '">' + item.name + '<br>');
                });
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });

    });

</script>

<script>

    $('.admin-tab').removeClass("active");
    $('#access-tab').addClass("active");

</script>