@model AccountAccessViewModel
@{
    Layout = "_AdminDashboardLayout";
}

<div class="container mt-4">
    <div class="justify-content-between d-flex container-fluid mb-2 mt-4 position-relative ">
        <div class="">
            <h3>Account Access</h3>
        </div>
    </div>
    <div class=" border-0 shadow p-4 mb-5 rounded">
        <div class="row justify-content-end">

            <div class="d-flex justify-content-center  col-md-2 col-12 mr-0" style="border-radius:5px;">
                <a asp-controller="Admin" asp-action="CreateAccess" class="btn btn-outline-info d-flex justify-content-center mx-2" style="width:fit-content">
                    <span class="text-info">Create Access</span>
                </a>
            </div>

        </div>

        <div class="w-100 d-none d-md-block my-3 table-responsive">
            <table class="table table-hover " style="height:75px; text-align:match-parent">
                <colgroup>
                    <col span="1" style="width: 40%;">
                    <col span="1" style="width:40%;">
                    <col span="1" style="width: 20%;">

                </colgroup>
                <thead class=" ">
                    <tr class="table-secondary ">
                        <td class="text-dark">Name</td>
                        <td class="text-dark">Account Type</td>
                        <td class="text-dark text-center">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.roles)
                    {
                        <tr>

                            <td>
                                @role.Name
                            </td>
                            <td>
                                @role.AccounttypeName
                            </td>

                            <td class="text-center">
                                <a class="btn mx-1 btn-outline-info " asp-controller="Admin" asp-action="EditRole" asp-route-roleid="@role.Id" asp-route-accounttype="@role.AccountType">Edit</a>
                                <a asp-controller="Admin" asp-action="DeleteRole" asp-route-roleid="@role.Id" class="btn mx-1 btn-outline-info">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-12 mx-2 mt-4 d-md-none " style="background-color:#ebfafd">
            @foreach (var role in Model.roles)
            {
                <div class="btn d-flex justify-content-start  mx-1">
                    <div class="d-flex flex-column ">

                        <div class="row m-1 geeks">


                            <div class="d-flex justify-content-start w-100 my-2 ">

                                <div class="fs-5 mx-2">@role.Name</div>



                            </div>
                            <div class="d-flex justify-content-start ps-0 w-100 my-2">
                                <div class="fs-5 mx-2">On Call Status :</div>

                                <div class="fw-bold fs-5 mx-1 collapse-anchor">

                                    @role.AccounttypeName
                                </div>
                            </div>
                            <div class="d-flex justify-content-start ps-0 w-100 my-2">
                                <a class="btn btn-outline-info " asp-controller="Admin" asp-action="EditRole" asp-route-physicianId="@role.Id">Edit</a>
                                <a asp-controller="Admin" asp-action="DeleteRole" asp-route-physicianId="@role.Id" class="btn btn-outline-info">Delete</a>
                            </div>

                        </div>


                    </div>


                </div>

                <hr />
            }



        </div>
    </div>

</div>

<script>

    $('.admin-tab').removeClass("active");
    $('#access-tab').addClass("active");

</script>