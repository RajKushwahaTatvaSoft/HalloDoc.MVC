@model AdminCreateRequestViewModel
@{
    Layout = "_AdminDashboardLayout";
}

<div class="container-md container-fluid ">
    <div>
        <div class=" d-flex justify-content-between mt-5">
            <h4>Submit Information</h4>
            <button class="btn btn-outline-info" onclick="history.back(-1)">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#01bce9" width="15" height="15" viewBox="0 -960 960 960">
                    <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                </svg>
                <span>Back</span>
            </button>

        </div>
        <form method="post">
            <div class="shadow container mt-4 p-2">
                <div class="row   border-2">
                    <h4 class="mt-4 col-12  fs-6">Patient</h4>

                    <div class="col-md-6 mt-4">
                        <div class=" form-floating floating-label">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                            <label for="floatingInput">First name</label>
                        </div>

                    </div>
                    <div class="col-md-6 mt-4">
                        <div class=" floating-label form-floating">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last name">
                            <label for="floatingInput">Last name</label>
                        </div>
                    </div>

                    <div class="col-lg-6 mt-4">
                        <div class="form-floating d-flex " style="height:60px;">
                            <input id="admin-phone-country" asp-for="countryCode" hidden />

                            <input id="admin-phone" class=" form-control" type="tel" asp-for="phoneNumber" />
                            <span asp-validation-for="phoneNumber" style="color:red"></span>
                        </div>

                    </div>
                    <div class="col-md-6 col-sm-12 mt-4 form-floating">
                        <input asp-for="email" type="email" class="form-control " id="floatingInputemail"
                               placeholder="Email" aria-label="Email">
                        <label class="ms-2 " for="floatingInputemail">Email</label>
                    </div>
                    <div class=" col-md-6 col-sm-12  form-floating mt-4 ">
                        <input asp-for="dob" type="date" class="form-control " id="floatingInputdate"
                               placeholder="Date Of Birth" aria-label="Date Of Birth">
                        <label class="ms-2 " for="floatingInputdate">Date Of Birth</label>
                    </div>


                </div>
                <div class="row   border-2">
                    <h4 class="mt-4 col-12  fs-6">Location</h4>

                    <div class="col-md-6 mt-4">
                        <div class=" form-floating floating-label">
                            <input asp-for="street" type="text" class="form-control" placeholder="Street">
                            <label for="floatingInput">Street</label>
                        </div>

                    </div>
                    <div class="col-md-6 mt-4">
                        <div class=" floating-label form-floating">
                            <input asp-for="city" type="text" class="form-control" placeholder="City">
                            <label for="floatingInput">City</label>
                        </div>
                    </div>

                    <div class="col-lg-6 mt-4">
                        <select asp-for="state" class=" form-select" style="height:60px;">
                            <option class="form-floating" disabled selected value="0">Choose State </option>
                            @foreach(var region in Model.regions)
                            {
                                <option value="@region.Regionid">@region.Name</option>
                            }
                        </select>

                    </div>
                    <div class="col-md-6 col-sm-12 mt-4 form-floating">
                        <input asp-for="zipCode" type="number" class="form-control " id="floatingInputemail"
                               placeholder="Zip" aria-label="Zip">
                        <label class="ms-2 " for="floatingInputemail">Zip</label>
                    </div>
                    <div class=" col-md-6 col-sm-12  form-floating mt-4 ">
                        <input asp-for="room" type="text" class="form-control " id="floatingInputdate"
                               placeholder="Rooms" aria-label="Rooms">
                        <label class="ms-2 " for="floatingInputdate">Rooms</label>
                    </div>
                    <h4 class="mt-4 col-12  fs-6">Notes</h4>
                    <div class=" col-12 mt-4">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                                      style="height: 100px" asp-for="notes"></textarea>
                            <label for="floatingTextarea2">Admin Notes</label>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button onclick="changeCountryCode()" type="submit" class="btn btn-info text-white">Save</button>
                    <button type="reset" class="btn cancel-btn">Cancel</button>
                </div>


            </div>
        </form>
    </div>
</div>

<script>

    const phoneInputField = document.getElementById("admin-phone");
    var patientPhoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        preferredCountries: ["in"],
        separateDialCode: true,
        initialCountry: "in"
    });


    function changeCountryCode() {
        var countryCode = document.getElementById("admin-phone-country");
        countryCode.value = patientPhoneInput.getSelectedCountryData().dialCode;
        console.log(countryCode.value);
    }

</script>

<script>

    $('.admin-tab').removeClass("active");
    $('#dashboard-tab').addClass("active");

</script>