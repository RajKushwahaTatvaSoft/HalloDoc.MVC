@model EncounterFormViewModel
@{
    Layout = "_AdminDashboardLayout";
}

<div class="container  mt-4">

    <div class=" d-flex w-100 justify-content-between align-items-center container gap-4 p-4">
        <h4>Encounter</h4>
        <a class="btn btn-outline-info fw-bold" asp-controller="Patient" asp-action="PatientDashboard">
            <svg xmlns="http://www.w3.org/2000/svg" fill="#01bce9" width="15" height="15" viewBox="0 -960 960 960">
                <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
            </svg>
            <span>Back</span>
        </a>
    </div>
    <form method="post" enctype="multipart/form-data" action="" class="shadow border rounded my-3 container d-flex flex-column shadow gap-4 p-4">
        <div class="mt-3 ">

            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                    <input asp-for="firstName" type="text" class="form-control " id="floatingInputFirst"
                           placeholder="First Name" aria-label="First Name">
                    <label class="ms-2 " for="floatingInputFirst">First Name</label>

                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                    <input asp-for="lastName" type="text" class="form-control " id="floatingInputLast"
                           placeholder="Last Name" aria-label="Last Name">
                    <label class="ms-2  " for="floatingInputLast">Last Name</label>
                    <span asp-validation-for="lastName"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                    <input asp-for="location" type="text" class="form-control " id="floatingInputFirst"
                           placeholder="Location" aria-label="Location">
                    <label class="ms-2 " for="floatingInputFirst">Location</label>

                </div>

            </div>
            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating  ">
                    <input asp-for="dob" type="date" class="form-control " id="floatingInputdate"
                           placeholder="Date Of Birth" aria-label="First Name">
                    <label class="ms-2 " for="floatingInputdate">Date Of Birth</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating  ">
                    <input asp-for="createdDate" type="date" class="form-control " id="floatingInputdate"
                           placeholder="Date Of Birth" aria-label="First Name">
                    <label class="ms-2 " for="floatingInputdate">Date</label>
                </div>
            </div>




            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="phoneNumber" type="tel" class="phone form-control " id="floatingInputcontact"
                           placeholder="99XXXXXXXX" aria-label="Contact Number">

                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="email" type="email" class="form-control " id="floatingInputemail"
                           placeholder="Email" aria-label="Email">
                    <label class="ms-2 " for="floatingInputemail">Email</label>
                </div>

            </div>




            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="history" type="text" class="form-control " id="floatingInputStreet"
                           placeholder="history" aria-label="history">
                    <label class="ms-2 " for="floatingInputStreet">History of present illness or injury</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="medicalHistorty" type="text" class="form-control " id="floatingInputCity" placeholder="medicalHistorty"
                           aria-label="medicalHistorty">
                    <label class="ms-2  " for="floatingInputCity">Medical history</label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="medications" type="text" class="form-control " id="floatingInputState" placeholder="medications"
                           aria-label="medications">
                    <label class="ms-2 " for="floatingInputState">Medications</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="allergies" type="text" class="form-control " id="floatingInputZipCode"
                           placeholder="Allergies" aria-label="Allergies">
                    <label class="ms-2  " for="floatingInputZipCode">Allergies</label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 col-sm-12 form-floating mb-3">
                    <input asp-for="temp" type="text" class="form-control " id="floatingInputroom"
                           placeholder="temp" aria-label="temp">
                    <label class="ms-2" for="floatingInputroom">Temp</label>
                </div>
                <div class="col-md-4 col-sm-12 form-floating mb-3">
                    <input asp-for="hr" type="text" class="form-control " id="floatingInputroom"
                           placeholder="hr" aria-label="hr">
                    <label class="ms-2" for="floatingInputroom">HR</label>
                </div>
                <div class="col-md-4 col-sm-12 form-floating mb-3">
                    <input asp-for="rr" type="text" class="form-control " id="floatingInputroom"
                           placeholder="rr" aria-label="rr">
                    <label class="ms-2" for="floatingInputroom">RR</label>
                </div>

            </div>
            <div class="row mb-3">
                <div class="col-md-4  col-sm-12 mb-3">
                    <div class="row p-0 m-0">
                        <div class="col-md-6 col-sm-6 form-floating">
                            <input asp-for="bpLow" type="text" class="form-control " id="floatingInputroom"
                                   placeholder="Blood Pressure (Low)">
                            <label class="ms-2" for="floatingInputroom">Blood Pressure (Low)</label>
                        </div>
                        <div class="col-md-6 col-sm-6 form-floating">
                            <input asp-for="bpHigh" type="text" class="form-control " id="floatingInputroom"
                                   placeholder="Blood Pressure(High)">
                            <label class="ms-2" for="floatingInputroom">Blood Pressure (High)</label>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 col-sm-12 form-floating mb-3">
                    <input asp-for="o2" type="text" class="form-control " id="floatingInputroom" placeholder="02">
                    <label class="ms-2" for="floatingInputroom">O2</label>
                </div>
                <div class="col-md-4 col-sm-12 form-floating mb-3">
                    <input asp-for="pain" type="text" class="form-control " id="floatingInputroom" placeholder="Pain">
                    <label class="ms-2" for="floatingInputroom">Pain</label>
                </div>

            </div>



            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="heent" type="text" class="form-control " id="floatingInputrelation" placeholder=" Heent">
                    <label class="ms-2" for="floatingInputrelation">Heent</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="cv" type="text" class="form-control " id="floatingInputrelation" placeholder="CV">
                    <label class="ms-2" for="floatingInputrelation">CV</label>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="chest" type="text" class="form-control " id="floatingInputrelation" placeholder="Chest">
                    <label class="ms-2" for="floatingInputrelation">Chest</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="abd" type="text" class="form-control " id="floatingInputrelation" placeholder="ABD">
                    <label class="ms-2" for="floatingInputrelation">ABD</label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="extr" type="text" class="form-control " id="floatingInputrelation" placeholder="Extr">
                    <label class="ms-2" for="floatingInputrelation">Extr</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="skin" type="text" class="form-control " id="floatingInputrelation" placeholder="Skin">
                    <label class="ms-2" for="floatingInputrelation">Skin</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="neuro" type="text" class="form-control " id="floatingInputrelation" placeholder="Neuro">
                    <label class="ms-2" for="floatingInputrelation">Neuro</label>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                    <input asp-for="other" type="text" class="form-control " id="floatingInputrelation" placeholder="Other">
                    <label class="ms-2" for="floatingInputrelation">Other</label>
                </div>
            </div>

            <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mt-4 pt-4 mb-3">
                <button class="btn btn-info me-md-2 text-white fw-bold mb-3" type="submit">Submit</button>
                <button class="btn btn-outline-info fw-bold mb-3" type="reset">Cancel</button>
            </div>
        </div>
    </form>
</div>
