@model ContactYourProviderModel

<div class="modal fade" id="contactYourProviderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <div class="modal-dark modal-title text-white" id="exampleModalLongTitle">
                    Contact Your Provider
                </div>
                <button type="button" class="btn" aria-label="Close" data-bs-dismiss="modal">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px"
                         fill="#FFFFFF">
                        <path d="M0 0h24v24H0V0z" fill="none" />
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" />
                    </svg>
                </button>
            </div>

            <form method="post" asp-controller="Admin" asp-action="ContactYourProviderModal">
                <div class="modal-body">
                    <span class="modal-head">Choose communication to send message</span>
                    <div class="modal-flex my-3">

                        <input asp-for="PhysicianId" hidden />

                        <div class="form-check">
                            <input class="form-check-input" asp-for="CommunicationType" value="1" type="radio" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                SMS
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" asp-for="CommunicationType" value="2" type="radio" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Email
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" asp-for="CommunicationType" value="3" type="radio" id="flexRadioDefault3">
                            <label class="form-check-label" for="flexRadioDefault3">
                                Both
                            </label>
                        </div>

                        <div class="form-floating mt-3">
                            <textarea asp-for="Message" style="height: 100px;" type="text" class="form-control" placeholder="Message"></textarea>
                            <label for="assignCaseNotes">Message</label>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="assign-modal-submit-btn" class="btn btn-info text-white" data-bs-dismiss="modal">Submit</button>
                    <button type="button" class="btn" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


