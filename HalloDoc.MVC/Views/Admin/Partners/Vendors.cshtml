@model VendorViewModel;
@{
    Layout = "_AdminDashboardLayout";
    ViewData["Title"] = "Partners";
}
<div class="container">
    <div class="justify-content-between d-flex container-fluid  position-relative ">
        <div class="">
            <h3 class="fw-bolder">
                Vendor(s)
            </h3>
        </div>

    </div>
    <div class=" border-0  py-1 mx-3 mt-3 rounded">
        <div class="row">
            <div class="d-flex normal-input rounded align-items-center ml-auto col-2 mx-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="current" viewBox="0 0 50 50">
                    <path d="M 21 3 C 11.654545 3 4 10.654545 4 20 C 4 29.345455 11.654545 37 21 37 C 24.701287 37 28.127393 35.786719 30.927734 33.755859 L 44.085938 46.914062 L 46.914062 44.085938 L 33.875 31.046875 C 36.43682 28.068316 38 24.210207 38 20 C 38 10.654545 30.345455 3 21 3 z M 21 5 C 29.254545 5 36 11.745455 36 20 C 36 28.254545 29.254545 35 21 35 C 12.745455 35 6 28.254545 6 20 C 6 11.745455 12.745455 5 21 5 z">
                    </path>
                </svg>
                <input type="search" id="searchVendor" class="form-control border border-0" placeholder="Search Vendors">
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <select class="form-select ml-auto col-2 mx-2" id="selectProfession">
                        <option selected>All Profession</option>
                        @foreach (var item in Model.Healthprofessionaltypes)
                        {
                            <option value="@item.Healthprofessionalid">@item.Professionname</option>
                        }
                    </select>
                    <label for="selectProfession">Search By Profession</label>
                </div>
            </div>
            <div class="col-md-5"></div>
            <div class="col-md-2 mt-2">
                <a class="btn btn-outline-info mx-2" style="width:fit-content" asp-action="AddBusiness">
                    Add Vendor
                </a>
            </div>
        </div>
    </div>
    <div id="businessTable"></div>

</div>

<script>
    $('.admin-tab').removeClass("active");
    $('#partner-tab').addClass("active");
</script>

<script>
    var search_filter = "";
    var profession_filter = 0;

    $(document).ready(function () {
        loadBusinessTable();
    });

    $("#selectProfession").change(function () {
        profession_filter = $(this).val();
        loadBusinessTable();
    });

    var searchTimer;

    $("#searchVendor").keyup(function (e) {
        var searchValue = $(this).val().toLowerCase();
        search_filter = searchValue;

        clearTimeout(searchTimer);
        searchTimer = setTimeout(function () {
            loadBusinessTable();
        }, 1000);

    });

    function loadBusinessTable() {
        $.ajax({
            url: '/Admin/BusinessTable',
            type: 'POST',
            data: {
                vendorName: search_filter, 
                professionId : profession_filter,
            },
            success: function (result) {
                $('#businessTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        });
    }
</script>