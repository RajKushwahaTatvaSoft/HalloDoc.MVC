@model List<VendorTRow>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <td>Profession</td>
            <td>Business Name</td>
            <td>Email</td>
            <td>Fax Number</td>
            <td>Phone Number</td>
            <td>Business Contact</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProfessionName</td>
                <td>@item.BusinessName</td>
                <td>@item.Email</td>
                <td>@item.FaxNumber</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BusinessContact</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditBusiness" asp-route-vendorId="@item.BusinessId" class="btn btn-outline-info">Edit</a>
                    <a class="btn btn-outline-info" onclick="deleteVendor(@item.BusinessId)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function deleteVendor(vId) {
        $.ajax({
            url: "/Admin/DeleteBusiness",
            data: { vendorId: vId },
            type: 'POST',
            success: function (result) {
                location.reload();
            },
            error: function (error) {
                console.log(error);
                alert('Error Cancelling Request')
            },
        });
    }
</script>