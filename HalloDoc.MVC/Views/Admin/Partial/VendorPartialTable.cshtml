@model VendorViewModel


<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <td>Profession</td>
            <td>Business Name</td>
            <td>Email</td>
            <td>Fax Number</td>
            <td>Phone Number</td>
            <td>Business Contact</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProfessionName</td>
                <td>@item.BusinessName</td>
                <td>@item.Email</td>
                <td>@item.FaxNumber</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BusinessContact</td>
                <td>
                    <a class="btn btn-outline-info" href="@Url.Action("EditBusiness","Admin", new {VendorId=item.BusinessId, pageSize=Model.PageSize,pageNumber=Model.PageIndex})">Edit</a>
                    <a class="btn btn-outline-info" onclick="deleteVendor(@item.BusinessId)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <nav>
                <ul class="paging justify-content-center d-flex" style="list-style-type:none">

                    <li class="page-item @(Model.PageIndex==1?"disabled":"") ">
                        <button type="button" class="btn page-link text-black pageBtn" data-page="1"><span>❮❮</span></button>
                    </li>
                    <li class="page-item @(Model.HasPreviousPage?"":"disabled")">
                        <button type="button" class="btn page-link text-black pageBtn" data-page="@(Model.PageIndex - 1)"><span>❮</span></button>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageIndex==i?"active":"")">
                            <button type="button" class="btn page-link text-black pageBtn" data-page="@i"><span>@i</span></button>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage?"":"disabled")">
                        <button type="button" class="btn page-link text-black pageBtn" data-page="@(Model.PageIndex + 1)"><span>❯</span></button>
                    </li>
                    <li class="page-item @(Model.PageIndex == Model.TotalPages ?"disabled":"")">
                        <button type="button" class="btn page-link text-black pageBtn" data-page="@(Model.TotalPages)"><span>❯❯</span></button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<script>
    $(".pageBtn").click(function () {
        var pageNumber = $(this).data('page');
        var pageSize = $("#pageSize").val();
        var professionid = $('#selectProfession').val();

        $("#pagenumber").val(pageNumber);
        $.ajax({
            url: '/Admin/BusinessTable',
            type: 'POST',
            data: {
                professionId: professionid,
                pageNumber: pageNumber,
                pageSize: pageSize,
            },
            success: function (result) {
                $('#businessTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>



<script>
    function deleteVendor(vendorId) {
        $.ajax({
            url: "/Admin/DeleteBusiness",
            data: { VendorId: vendorId },
            type: 'GET',
            success: function (result) {
                location.reload();
            },
            error: function (error) {
                console.log(error);
                alert('Error Cancelling Request')
            },
        });
    }
</script>