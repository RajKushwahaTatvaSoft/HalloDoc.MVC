@model PagedList<LogTableRow>

<div class="table-responsive mt-3 d-none d-md-block">
    <table class="table">

        <thead class="table-head align-middle">

            <tr>

                <th>Recipient</th>
                <th>Action</th>
                <th>Role Name</th>
                <th>Mobile Number</th>
                <th>Create Date</th>
                <th>Sent Date</th>
                <th>Sent</th>
                <th>Sent Tries</th>
                <th>Confirmation Number</th>

            </tr>

        </thead>

        <tbody class="align-middle" id="dashboard-table-body">

            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.RecipientName</td>
                    <td>@log.Action</td>
                    <td>@log.RoleName</td>
                    <td>@log.MobileNumber</td>
                    <td>@log.CreatedDate</td>
                    <td>@log.SentDate</td>
                    <td>@log.IsSent</td>
                    <td>@log.SentTries</td>
                    <td>@log.ConfirmationNumber</td>
                </tr>
            }
        </tbody>

    </table>
</div>

<partial name="_PaginationButton" />