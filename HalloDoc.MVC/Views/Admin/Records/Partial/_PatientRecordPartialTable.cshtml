@model PatientRecordsViewModel<div class="mt-3 table-responsive">    <table class="table laptop">        <colgroup>            <col span="1" style="width: 15%;">            <col span="1" style="width: 15%;">            <col span="1" style="width: 20%;">            <col span="1" style="width: 15%;">            <col span="1" style="width: 20%;">            <col span="1" style="width: 15%;">        </colgroup>        <thead class="table-head align-middle">            <tr>                <th>                    First Name                </th>                <th>Last Name</th>                <th>Email</th>                <th>Phone</th>                <th>Address</th>                <th class="d-flex justify-content-end">Actions</th>            </tr>        </thead>        <tbody class="table-body align-middle">            @for (int i = 0; i < Model.users.Count; i++)            {                <tr class="table-row">                    <td>                        @Model.users[i].Firstname                    </td>                    <td>  @Model.users[i].Lastname</td>                    <td class="text-grey">@Model.users[i].Email</td>                    <td class="text-grey">                        @Model.users[i].Mobile                    </td>                    <td>@Model.users[i].Street @Model.users[i].City @Model.users[i].State </td>                    <td class="d-flex justify-content-end">                        <a asp-controller="Admin" asp-action="Explore" asp-route-id="@Model.users[i].Userid" class="btn btn-outline-info align-middle">                            <span class="text-info">Explore</span>                        </a>                    </td>                </tr>            }        </tbody>    </table></div>