@model PatientRequestViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Patient Request";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Request</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.20.0/dist/jquery.validate.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

</head>

<body class="create-patient-request">

    @* <partial name="_ValidationScriptsPartial" /> *@

    <header class="shadow">
        <div class="d-flex mx-3 align-items-center justify-content-between">
            <img src="/images/hallo_doc_logo.png" alt="logo_icon" height="100px">
            <button onclick="myFunction()" class="btn btn-outline-info shadow-none night-mode-btn">
                <svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px"
                     viewBox="0 0 24 24" width="24px">
                    <rect fill="none" height="24" width="24" />
                    <path d="M9.37,5.51C9.19,6.15,9.1,6.82,9.1,7.5c0,4.08,3.32,7.4,7.4,7.4c0.68,0,1.35-0.09,1.99-0.27C17.45,17.19,14.93,19,12,19 c-3.86,0-7-3.14-7-7C5,9.07,6.81,6.55,9.37,5.51z M12,3c-4.97,0-9,4.03-9,9s4.03,9,9,9s9-4.03,9-9c0-0.46-0.04-0.92-0.1-1.36 c-0.98,1.37-2.58,2.26-4.4,2.26c-2.98,0-5.4-2.42-5.4-5.4c0-1.81,0.89-3.42,2.26-4.4C12.92,3.04,12.46,3,12,3L12,3z" />
                </svg>
            </button>
        </div>
    </header>

    <div class="container-fluid">

        <div class="mt-4">
            <button onclick="history.back(-1)" class="btn btn-outline-info shadow-none">
                <div class="d-flex justify-content-center align-items-center back-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="24">
                        <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                    </svg>
                    <span class="h6 p-0 m-0 text-center">Back</span>
                </div>
            </button>
        </div>


        <form method="post" enctype="multipart/form-data" id="patient-request-form" novalidate>

            <div class="container-fluid form-card shadow-sm rounded mx-1 my-3 py-3">

                <div class="row">
                    <h3>Patient Information</h3>
                </div>

                <div class="row">

                    <div class="form-floating mt-2">
                        <textarea asp-for="Symptom" class="form-control" placeholder="Enter brief details of Symptoms (Optional)" id="symptoms-text-area"
                                  style="height: 100px;"></textarea>
                        <label class="ms-2" for="symptoms-text-area">Enter brief details of Symptoms (Optional)</label>
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name"
                                   id="patient-form-first-name" required>
                            <label for="floatingTextarea2">First Name <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>

                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name"
                                   id="patient-form-last-name">
                            <label for="floatingTextarea2">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-12">

                        <div class="form-floating mt-3">

                            <input asp-for="DOB" class="form-control" placeholder="Date of Birth:" type="date"
                                   id="patient-dob">
                            <label for="floatingTextarea2">Date of Birth <sup class="text-danger">*</sup> :</label>
                            <span asp-validation-for="DOB" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>

                        </div>

                    </div>

                </div>

                <div class="row mt-3">
                    <h3>Patient Contact Information</h3>
                </div>

                <div class="row">

                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email"
                                   id="patient-form-email" required>
                            <label for="floatingInputemail">Email <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-md-6 col-12">

                        <div class="form-floating mt-3">
                            <input id="patient-phone-country" asp-for="Countrycode" hidden />
                            <input asp-for="Phone" id="patient-phone" class="form-control" type="tel" required>
                            <sup class="text-danger">* Required</sup>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>

                    </div>

                </div>

                @{
                    string passwordStyle = "flex";
                    if (Model.IsValidated != true)
                    {
                        passwordStyle = "none";
                    }
                }

                <div class="row" id="hiddendiv" style="display: @passwordStyle;">

                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <input asp-for="Password" class="form-control" placeholder="Password" id="patient-password">
                            <label for="floatingTextarea2">Password <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"
                                   id="patient-confirm-password">
                            <label for="floatingTextarea2">Confirm Password <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                </div>

                <div class="row mt-3">
                    <h3>Patient Location</h3>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="form-floating mt-3">
                            <input asp-for="Street" class="form-control" placeholder="Street"
                                   id="floatingTextarea2">
                            <label for="floatingTextarea2">Street</label>
                            <span asp-validation-for="Street" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="form-floating mt-3">
                            <select asp-for="CityId" class="form-select" id="patient-city" required>
                                <option disabled selected value=""> -- Select City -- </option>
                            </select>
                            <label for="patient-city">City <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="form-floating mt-3">
                            <select asp-for="RegionId" class="form-select" id="patient-state" required>
                                <option disabled selected value=""> -- Select State -- </option>

                                @if (Model.regions != null && Model.regions.Any())
                                {
                                    @foreach (var region in Model.regions)
                                    {
                                        <option value="@region.Regionid">@region.Name</option>
                                    }
                                }

                            </select>
                            <label for="patient-state">State <sup class="text-danger">*</sup></label>
                            <span asp-validation-for="RegionId" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="form-floating mt-3">
                            <input asp-for="ZipCode" class="form-control" placeholder="Zip Code"
                                   id="floatingTextarea2">
                            <label for="floatingTextarea2">Zip Code</label>
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="form-floating mt-3">
                            <input asp-for="RoomSuite" class="form-control" placeholder="Room # / Suite (Optional)"
                                   id="floatingTextarea2">
                            <label for="floatingTextarea2">Room # / Suite (Optional)</label>
                            <span asp-validation-for="RoomSuite" class="text-danger"></span>
                            <span class="error-msg text-danger" style="display:none;"></span>
                        </div>
                    </div>

                </div>

                <div class="row mt-3">
                    <h3>(Optional) Upload Photo or Document</h3>
                </div>

                <div class="row">

                    <div class="mb-3">

                        <input asp-for="File" class="form-control" type="file" id="file_input_id" style="opacity:0;height:0;">
                        <span asp-validation-for="File" class="text-danger"></span>
                        <span class="error-msg text-danger" style="display:none;"></span>
                        <div class="input-group mb-3">
                            <input type="text" id='text_input_id' class="form-control" placeholder="Select File"
                                   style="caret-color: transparent" autocomplete="off">

                            <span class="input-group-text" id="text_input_span_id " style="background-color: #10bce9;">
                                <div>
                                    <img src="/images/upload_icon.svg" alt="upload-icon">
                                    <span class="ms-1 text-white">Upload</span>
                                </div>
                            </span>

                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class=" d-flex justify-content-center justify-content-md-end">

                        <button type="submit" onclick="changeCountryCode()" class="btn" style="background-color: #10bce9;">
                            <span class="text-white">Submit</span>
                        </button>

                        <button type="reset" class="btn ms-3" style="border: 1px solid #10bce9;">
                            <span style="color: #10bce9;">Cancel</span>
                        </button>
                    </div>
                </div>

            </div>

        </form>

        <div class="row align-items-end justify-content-center">

            <footer class="py-3" style="background-color: #282828;">

                <div class="justify-content-md-end justify-content-center d-flex">
                    <a class="text-decoration-none" href=""><span class="text-white">Terms of Conditions</span></a>
                    <span class="px-2 " style="color: grey;">|</span>
                    <a class="text-decoration-none" href=""><span class="text-white">Privacy Policy</span></a>
                </div>

            </footer>
        </div>

    </div>

    <script src="~/js/guest/guest-requests.js"></script>
    @* <script>

    @{
    if (Model.IsValidated ?? false)
    {
    @:validatePatientForm();
    }
    }
    </script> *@
</body>

</html>