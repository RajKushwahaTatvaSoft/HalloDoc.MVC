@model EditPhysicianViewModel
@{
    Layout = "_PhysicianDashboardLayout";
    ViewData["Title"] = "Physician Account";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.min.js" integrity="sha512-lxQ4VnKKW7foGFV6L9zlSe+6QppP9B2t+tMMaV4s4iqAv4iHIyXED7O+fke1VeLNaRdoVkVt8Hw/jmZ+XocsXQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.css" integrity="sha512-tlP4yGOtHdxdeW9/VptIsVMLtgnObNNr07KlHzK4B5zVUuzJ+9KrF86B/a7PJnzxEggPAMzoV/eOipZd8wWpag==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>


@* Request To Admin Case *@
<div class="modal fade" id="requestToAdminModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <div class="modal-dark modal-title text-white" id="exampleModalLongTitle">
                    Request To Administrator
                </div>
                <button type="button" class="btn" aria-label="Close" data-bs-dismiss="modal">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px"
                         fill="#FFFFFF">
                        <path d="M0 0h24v24H0V0z" fill="none" />
                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" />
                    </svg>
                </button>
            </div>
            <form method="post" asp-controller="Physician" asp-action="SendMessageToAdmin">
                <div class="modal-body">
                    <span class="modal-head">Need to send message to edit</span>
                    <div class="modal-flex my-3">
                        <div class="form-floating mt-3">
                            <textarea style="height: 100px;" id="rtaMessage" type="text" class="form-control" name="message" placeholder="Message"></textarea>
                            <label for="rtaMessage">Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info text-white" data-bs-dismiss="modal">Send</button>
                    <button type="button" class="btn" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="">
    <div class="container-fluid d-flex justify-content-between mt-4" style="max-width:1000px">
        <h4>
            My Profile
        </h4>
        <button class="btn btn-outline-info align-middle" onclick="history.back(-1)">
            <svg xmlns="http://www.w3.org/2000/svg" fill="#01bce9" width="15" height="15" viewBox="0 -960 960 960">
                <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
            </svg>
            <span>Back</span>
        </button>

    </div>

    <div class="container-fluid dashboard-card justify-content-center mt-4" style="max-width:1000px">

        <div class="d-flex justify-content-end">
            <button data-bs-toggle="modal" data-bs-target="#requestToAdminModal" class="btn btn-outline-info">Request To Admin</button>
        </div>

        <h5>Account Information</h5>
        <div class="row g-2 m-1">
            <div class="col-md">
                <div class="form-floating">
                    <input asp-for="PhyUserName" type="text" class="form-control" id="userName" placeholder="User Name" disabled>
                    <label for="userName">User Name</label>
                </div>
            </div>

            <div class="col-md">
                <div class="form-floating">
                    <input type="text" class="form-control" id="phy-password" placeholder="Password">
                    <label for="floatingSelectGrid">Password</label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-1">
            <button class="btn btn-outline-info" id="reset-password-btn">Reset Password</button>
        </div>


        <form method="post" id="physician-info-form">

            <h5>Physician Information</h5>

            <input asp-for="PhysicianId" hidden />

            <fieldset id="physician-information-set" disabled>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                            <label for="">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                            <label for="floatingSelectGrid">Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                            <label for="">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <input id="phy-phone-country" asp-for="CountryCode" hidden />
                            <input id="phy-phone" class="py-4 form-control" type="tel" asp-for="Phone" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="MedicalLicenseNumber" class="form-control" placeholder="Medical License Number">
                            <label for="">Medical License Number</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="NPINumber" class="form-control" placeholder="NPI Number">
                            <label for="">NPI Number</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="SyncEmail" class="form-control" placeholder="Synchronization Email Address">
                            <label for="">Synchronization Email Address</label>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">

                        <select multiple data-live-search="true" class="form-select col-6 selectpicker" id="adminSelectedRegions" asp-for="selectedRegions">

                            @foreach (var region in Model.regions)
                            {
                                <option value="@region.Regionid" style="font-size: 10px;">@region.Name</option>
                            }

                        </select>

                    </div>
                </div>
            </fieldset>

        </form>

        <form method="post" id="physician-mailing-billing-form">

            <h5>Mailing & Billing Information</h5>

            <fieldset disabled id="physician-mailing-billing-set">

                <input asp-for="PhysicianId" hidden />

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address1" type="text" class="form-control" placeholder="Address 1">
                            <label for="">Address 1</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address2" type="text" class="form-control" placeholder="Address 2">
                            <label for="floatingSelectGrid">Address 2</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">

                            <select disabled asp-for="CityId" class="form-select billingChange" id="create-phy-city">
                                <option disabled value=""> -- Select City -- </option>

                            </select>
                            <label for="admin-billing-city">City</label>
                            <span asp-validation-for="CityId" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <select asp-for="RegionId" class="form-select billingChange" placeholder="State" id="patientRequestRegion">
                                <option disabled value="0"> -- Select State -- </option>

                                @foreach (var region in Model.regions)
                                {
                                    <option value="@region.Regionid">@region.Name</option>
                                }

                            </select>
                            <label for="">State</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Zip" type="text" class="form-control" placeholder="Zip">
                            <label for="">Zip</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <input asp-for="MailCountryCode" hidden id="phy-alt-phone-country" />
                            <input asp-for="MailPhone" type="tel" id="phy-alt-phone" class="form-control w-100 h-100" placeholder="Phone">
                        </div>
                    </div>
                </div>

            </fieldset>

        </form>

        <form method="post" id="physician-profile-form">

            <h5>Provider Profile</h5>

            <input asp-for="PhysicianId" hidden />

            <fieldset id="physician-profile-set" disabled>

                <div class="row">

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="BusinessName" type="text" class="form-control" placeholder="Business Name">
                            <label for="">Business Name</label>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="BusinessWebsite" type="text" class="form-control" placeholder="Business Website">
                            <label for="floatingSelectGrid">Business Website</label>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">

                        <input asp-for="PhotoFile" accept="image/png, image/jpeg, image/jpg" class="form-control" type="file" id="phy_photo_input_id" style="display:none;">

                        <div class="input-group mb-3">
                            <input type="text" id="phy_photo_text_input_id" class="form-control" placeholder="Select Photo"
                                   style="caret-color: transparent" autocomplete="off">

                            <span class="input-group-text" id="phy_photo_span_input_id" style="background-color: #10bce9;">
                                <label for="text_input_span_id">
                                    <button style="background-color: #10bce9; border: none;" type="button">
                                        <img src="/images/upload_icon.svg" alt="upload-icon">
                                        <span class="ms-1 text-white">Upload</span>
                                    </button>
                                </label>
                            </span>

                        </div>

                    </div>

                    <div class="col-md-6 mt-2">

                        <div class="d-flex">

                            <input asp-for="SignatureFile" accept="image/png, image/jpeg, image/jpg" class="form-control" type="file" id="phy_sign_input_id" style="display:none;">

                            <div class="input-group mb-3">
                                <input type="text" id="phy_sign_text_input_id" class="form-control" placeholder="Select Signature"
                                       style="caret-color: transparent" autocomplete="off">

                                <span class="input-group-text" id="phy_sign_span_input_id" style="background-color: #10bce9;">
                                    <label for="phy_sign_span_input_id">
                                        <button style="background-color: #10bce9; border: none;" type="button">
                                            <img src="/images/upload_icon.svg" alt="upload-icon">
                                            <span class="ms-1 text-white">Upload</span>
                                        </button>
                                    </label>
                                </span>

                            </div>

                            <div id="create-signature-btn" style="height: 42px;color:white;" class="ms-1 btn btn-primary d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24" fill="currentColor">
                                    <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z" />
                                </svg>
                                <span class="ms-1 text-white">Create</span>
                            </div>

                        </div>

                    </div>


                </div>

                <div id="signature-div" style="display:none;">

                    <canvas id="signature-pad" width="450" height="150" style="border: 1px solid #ddd;"></canvas>

                    <div>
                        <button type="button" id="clear-signature">Clear</button>
                        <button type="button" id="save-signature">Save</button>
                    </div>

                </div>


            </fieldset>

        </form>


        <form method="post" id="phy-onboarding-form" class="mb-5">

            <h5>Onboarding</h5>

            <input asp-for="PhysicianId" hidden />

            <div class="row my-1">
                <div class="col d-flex justify-content-center">
                    <span>Independent Contract Agreement</span>
                </div>
                <div class="col">
                    @if (Model.IsICA)
                    {
                        <a href="/document/physician/@Model.PhysicianId/ICA.pdf" target="_blank" class="btn btn-primary">View</a>
                    }
                </div>
            </div>

            <div class="row my-1">
                <div class="col d-flex justify-content-center">
                    <span>Background Check</span>
                </div>
                <div class="col">
                    @if (Model.IsBGCheck)
                    {
                        <a href="/document/physician/@Model.PhysicianId/BackgroundCheck.pdf" target="_blank" class="btn btn-primary">View</a>
                    }
                </div>
            </div>

            <div class="row my-1">
                <div class="col d-flex justify-content-center">
                    <span>HIPAA Compliance</span>
                </div>
                <div class="col">
                    @if (Model.IsHIPAA)
                    {
                        <a href="/document/physician/@Model.PhysicianId/HipaaCompliance.pdf" target="_blank" class="btn btn-primary">View</a>
                    }
                </div>
            </div>

            <div class="row my-1">
                <div class="col d-flex justify-content-center">
                    <span>Non Disclosure Agreement</span>
                </div>
                <div class="col">
                    @if (Model.IsNDA)
                    {
                        <a href="/document/physician/@Model.PhysicianId/NDA.pdf" target="_blank" class="btn btn-primary">View</a>
                    }
                </div>
            </div>

            <div class="row my-1">
                <div class="col d-flex justify-content-center">
                    <span>License Document</span>
                </div>
                <div class="col">
                    @if (Model.IsLicenseDoc)
                    {
                        <a href="/document/physician/@Model.PhysicianId/LicenseDoc.pdf" target="_blank" class="btn btn-primary">View</a>
                    }
                </div>
            </div>

        </form>

    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
</script>
<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>

<script>
    $('#reset-password-btn').click(function () {

        $.ajax({
            url: "/Physician/ResetPhysicianPassword",
            data: { updatePassword: $('#phy-password').val() },
            type: 'POST',
            success: function (result) {
                $('#phy-password').val("");
            },
            error: function (error) {
                console.log(error);
                alert('Error Cancelling Request')
            },
        });

    });
</script>

<script>

    const phoneInputField = document.getElementById("phy-phone");
    var patientPhoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        preferredCountries: ["in"],
        separateDialCode: true,
        initialCountry: "in"
    });

    const phoneInputField1 = document.getElementById("phy-alt-phone");
    var patientPhoneInput1 = window.intlTelInput(phoneInputField1, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        preferredCountries: ["in"],
        separateDialCode: true,
        initialCountry: "in"
    });

</script>

<script>

    $('.admin-tab').removeClass("active");
    $('#profile-tab').addClass("active");

</script>