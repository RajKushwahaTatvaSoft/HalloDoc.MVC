@model SendOrderViewModel
@{
    string layoutName = "";
    if (Model.IsAdmin)
    {
        layoutName = "_AdminDashboardLayout";
    }
    else
    {
        layoutName = "_PhysicianDashboardLayout";
    }
}
@{
    Layout = layoutName;
}

<div class="container-fluid d-flex justify-content-center row ">

    <div class="col-8">

        <div class="d-flex justify-content-between mt-3">
            <div class="d-flex">
                <h4>Send Order</h4>
            </div>

            <button onclick="history.back(-1)" class="btn btn-outline-info shadow-none night-mode-btn d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 -960 960 960">
                    <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                </svg>
                <span>Back</span>
            </button>

        </div>

        <form method="post">

            <div class="shadow p-3 dashboard-card mt-4">

                <div class="row">

                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <select class="form-select" id="professionTypeList" aria-label="Floating label select example">
                                <option selected disabled value="0">-- Select Profession --</option>
                                @foreach (Healthprofessionaltype profession in Model.professionalTypeList)
                                {
                                    <option value="@profession.Healthprofessionalid">@profession.Professionname</option>
                                }
                            </select>
                            <label for="professionTypeList">Select Profession</label>
                        </div>
                    </div>

                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <select asp-for="SelectedVendor" class="form-select" id="businessList" aria-label="Floating label select example">
                                <option selected disabled value="0">-- Select Business --</option>
                            </select>
                            <label for="businessList">Business</label>
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6 col-12">

                        <div class="form-floating mt-3">

                            <input asp-for="BusinessContact" class="form-control" placeholder="Business Contact"
                                   id="businessContact">
                            <label for="businessContact">Business Contact</label>

                        </div>

                    </div>

                    <div class="col-md-6 col-12">

                        <div class="form-floating mt-3">
                            <input asp-for="Email" type="text" class="form-control" id="businessEmail" placeholder="Email Address" />
                            <label for="businessEmail">Email Address</label>
                        </div>

                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6 col-12">

                        <div class="form-floating mt-3">
                            <input asp-for="FaxNumber" type="text" class="form-control" id="businessFaxNumber" placeholder="Fax Number" />
                            <label for="businessFaxNumber">Fax Number</label>
                        </div>

                    </div>

                </div>

                <div class="row">

                    <div class="col-12">

                        <div class="form-floating mt-3">
                            <textarea asp-for="Prescription" style="height:100px" class="form-control" placeholder="Presciption or Order details"
                                      id="floatingTextarea2"></textarea>
                            <label for="floatingTextarea2">Presciption or Order details</label>
                        </div>

                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6 col-12">
                        <div class="form-floating mt-3">
                            <div class="form-floating mt-3">
                                <input asp-for="NoOfRefills" type="text" class="form-control" id="noOfRefills" placeholder="No. of refills" />
                                <label for="noOfRefills">No. of refills</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-3">

                    <button type="submit" class="btn py-2 px-4 ms-3" style="background-color: #10bce9; color: white;">
                        Submit
                    </button>

                    <button type="reset" class="btn py-2 px-4 ms-3 btn-outline-info">
                        Cancel
                    </button>

                </div>

            </div>

        </form>

    </div>

    <div style="height: 20px;"></div>

</div>

<script src="~/js/admin/admin-send-order.js"></script>

<script>

    $('.admin-tab').removeClass("active");
    $('#dashboard-tab').addClass("active");

</script>
